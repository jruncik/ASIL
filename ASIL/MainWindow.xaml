<Window x:Class="ASIL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASIL"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
                <Button x:Name="buttonLoad" Content="Load" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75" Click="buttonLoad_Click" Grid.Column="2"/>
            </StackPanel>
            <DataGrid x:Name="dataGrid" DataContext="{Binding Source = LogEntries}" HorizontalAlignment="Left" VerticalAlignment="Top" AutoGenerateColumns="false"
               CanUserResizeColumns="True" CanUserResizeRows="False" Grid.Column="2" Margin="0,0,0,0"/>
        </DockPanel>
    </Grid>
</Window>
